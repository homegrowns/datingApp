<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_couplechat"
    android:visibility="gone"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/img_couplechat"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/couplechat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="asasas"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/img_couplechat_meSending"-->
<!--                android:layout_width="10dp"-->
<!--                android:layout_height="10dp"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:src="@drawable/ic_menu_send"-->
<!--                android:visibility="gone"/>-->

        <TextView
            android:id="@+id/couplechat_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:text=""
            android:textStyle="italic" />

            <TextView
                android:id="@+id/couplechat_Mymassege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_savory"
                android:textSize="10dp"
                android:text=": 내가보낸 메세지"
                android:textStyle="bold"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_couplechat_receive"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/white_rounded_button"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>